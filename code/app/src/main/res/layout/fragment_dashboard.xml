<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img1"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/description_avatar" />

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小丽"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/contact_details1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="girl"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">

        <ImageButton
            android:id="@+id/call1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/baseline_call_24"

            />

        </LinearLayout>

        <ImageButton
            android:id="@+id/videocall1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/baseline_video_call_24"
             />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img2"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/description_avatar" />

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老大"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/contact_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="son"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/call2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/baseline_call_24"

                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/videocall2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/baseline_video_call_24"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/description_avatar"
            android:src="@drawable/img3" />

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="70dp"
